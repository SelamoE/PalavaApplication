<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myMap"
    android:name= "com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mainLoginButton"
        android:layout_width="333dp"
        android:layout_height="97dp"
        android:layout_marginEnd="41dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="41dp"
        android:layout_marginStart="37dp"
        android:text="@string/login"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#5E35B1"
        android:textColorHighlight="#3949AB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mainSignUpButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/mainSignUpButton"
        android:layout_width="338dp"
        android:layout_height="92dp"
        android:layout_marginBottom="108dp"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="36dp"
        android:text="@string/signup"
        android:textColor="#3949AB"
        android:textColorHighlight="#3949AB"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="391dp"
        android:layout_height="173dp"
        android:layout_marginBottom="414dp"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="7dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="283dp"
        android:layout_height="91dp"
        android:layout_marginBottom="446dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="66dp"
        android:text="@string/welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#8E24AA"
        android:textColorHint="#3949AB"
        android:textColorLink="#5E35B1"
        android:textSize="36sp"
        android:textStyle="normal|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>